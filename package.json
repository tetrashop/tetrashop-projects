{
  "name": "tetrashop-projects",
  "version": "1.0.0",
  "description": "پلتفرم پروژه‌های تتراشاپ",
  "main": "index.js",
  "scripts": {
    "start": "live-server . --port=3000 --host=localhost",
    "dev": "live-server . --port=3000 --host=localhost",
    "build": "echo 'No build step required for static site'",
    "deploy": "vercel --prod",
    "predeploy": "npm run build",
    "postdeploy": "echo 'Deployment completed!'",
    "test": "echo 'No tests specified' && exit 0",
    "lint": "echo 'No linter configured'",
    "format": "prettier --write '**/*.{js,html,css,md}'",
    "clean": "rm -rf node_modules .vercel",
    "setup": "npm install && echo 'Setup complete'",
    "status": "git status && echo '---' && git log --oneline -5"
  },
  "keywords": [
    "tetrashop",
    "portfolio",
    "projects",
    "showcase"
  ],
  "author": "Tetrashop Team <info@tetrashop.ir>",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "vercel": "^28.16.11",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tetrashop/tetrashop-projects.git"
  },
  "bugs": {
    "url": "https://github.com/tetrashop/tetrashop-projects/issues"
  },
  "homepage": "https://tetrashop-projects.vercel.app"
}
