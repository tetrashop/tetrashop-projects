{
  "name": "tetrashop-suite",
  "version": "3.0.0",
  "description": "Tetrashop Suite - پلتفرم کامل با معماری بهینه",
  "type": "module",
  "workspaces": [
    "apps/core",
    "apps/backend", 
    "apps/writer",
    "apps/shared"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/core",
    "start": "npm start --workspace=apps/core",
    "build": "npm run build --workspace=apps/core",
    "deploy": "vercel --prod",
    "deploy:core": "npm run deploy --workspace=apps/core",
    "deploy:all": "npm run deploy --workspaces",
    "test": "npm test --workspaces",
    "test:core": "npm test --workspace=apps/core",
    "setup": "npm install --workspaces",
    "manager": "node apps/shared/unified-manager.js"
  },
  "devDependencies": {
    "vercel": "^28.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
