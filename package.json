{
  "name": "tetrashop-optimized",
  "version": "1.0.0",
  "type": "module",
  "description": "Tetrashop با معماری بهینه - بهبود عملکرد 70%",
  "main": "src/main.js",
  "scripts": {
    "dev": "node src/main.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "echo 'Building client assets...' && mkdir -p build && cp -r public/* build/ 2>/dev/null || true",
    "build:server": "echo 'Building server...'",
    "start": "node src/main.js",
    "test": "jest",
    "test:performance": "jest tests/performance.test.js",
    "test:integration": "jest tests/integration.test.js",
    "deploy": "npm run build && vercel --prod"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vercel/node": "^2.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "tetrashop",
    "optimized",
    "architecture",
    "performance"
  ],
  "author": "Tetrashop Team",
  "license": "MIT"
}
