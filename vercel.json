// 📁 vercel.json
{
  "version": 2,
  "builds": [
    { "src": "central-dashboard/package.json", "use": "@vercel/next" },
    { "src": "chess-engine/package.json", "use": "@vercel/next" },
    { "src": "intelligent-writer/package.json", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/", "dest": "/central-dashboard" },
    { "src": "/chess", "dest": "/chess-engine" },
    { "src": "/writer", "dest": "/intelligent-writer" },
    { "src": "/(.*)", "dest": "/central-dashboard/404" }
  ]
}
