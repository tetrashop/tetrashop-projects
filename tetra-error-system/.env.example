# فایل: .env.example
# تنظیمات محیطی سیستم مدیریت خطای Tetra

# محیط اجرا
NODE_ENV=production

# سیستم‌های مانیتورینگ
SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/your-project
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook
PAGERDUTY_WEBHOOK_URL=https://events.pagerduty.com/v2/enqueue
EMAIL_SERVICE_URL=https://api.email-service.com/send

# تنظیمات داخلی
ERROR_HISTORY_RETENTION_DAYS=90
CRITICAL_ALERT_THRESHOLD=0.7
METRICS_COLLECTION_ENABLED=true

# پایگاه داده (مثال)
DATABASE_URL=mongodb://localhost:27017/tetra_errors
REDIS_URL=redis://localhost:6379

# API Keys
INTERNAL_API_KEY=your-internal-api-key-here
MONITORING_API_KEY=your-monitoring-api-key

# تنظیمات گزارش‌گیری
REPORT_GENERATION_INTERVAL_HOURS=24
AUTO_RESOLUTION_ENABLED=false
